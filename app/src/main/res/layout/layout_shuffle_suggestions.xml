<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/background_shuffle_suggestions">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp">

        <ImageView
            android:id="@+id/five"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_marginStart="6dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="4dp"
            android:rotation="30"
            android:src="@drawable/dice_five" />

        <ImageView
            android:id="@+id/three"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_margin="6dp"
            android:layout_marginStart="3dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="10dp"
            android:layout_toEndOf="@id/five"
            android:rotation="-30"
            android:src="@drawable/dice_three" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@id/three"
            android:text="Shuffle Suggestions"
            android:textColor="@color/black"
            android:textStyle="bold" />

    </RelativeLayout>


</RelativeLayout>